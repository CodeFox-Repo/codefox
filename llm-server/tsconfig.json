{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "express"]
  },
  "include": ["src/**/*", "src/**/__tests__/**/*", "src/model/**/*"],
  "exclude": ["node_modules", "dist", "coverage"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
